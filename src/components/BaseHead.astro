---
// ONLY CRITICAL CSS HERE
import "../styles/critical.css";

import type { ImageMetadata } from "astro";
import { SITE_TITLE } from "../consts";

import {config} from '../config.ts';
const { analytics } = config;
const {
  shouldLoadGA4,
  shouldEnableAnalyticsFE,
  idGA4,
  shouldEnableAnalytics,
} = analytics;


interface Props {
  title: string;
  description: string;
  image?: ImageMetadata;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const { title, description} = Astro.props;
---


<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
  rel="alternate"
  type="application/rss+xml"
  title={SITE_TITLE}
  href={new URL("rss.xml", Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- ca.oakenfold.blog: global vars -->
<script data-note="ca.oakenfold.blog" define:vars={{config}}>
  window["ca.oakenfold.blog"] = config;
</script>

{shouldLoadGA4 && shouldEnableAnalyticsFE && (
    <script data-note="GA4:3PI" async src={`https://www.googletagmanager.com/gtag/js?id=${idGA4}`}></script>
)}
{shouldEnableAnalytics && (
  <script data-note="GA4:gtag" define:vars={{ idGA4 }}>
    window.dataLayer = window.dataLayer || [];
    function gtag(){window.dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', idGA4);
    window.gtag = gtag;
  </script>
)}
