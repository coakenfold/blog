---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";

type Props = CollectionEntry<"blog">["data"];

const {
  description,
  heroImage,
  heroImageHeight,
  heroImageWidth,
  pubDate,
  author,
  title,
  updatedDate,
} = Astro.props;
---

<html lang="en">
  <head>
    {
      heroImage && (
        <link
          rel="preload"
          fetchpriority="high"
          as="image"
          href={heroImage.src}
          type={`image/${heroImage.format}`}
        />
      )
    }
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />
    <main>
      <article>
        {
          heroImage && (
            <Image
              width={heroImageWidth || 1020}
              height={heroImageHeight || 510}
              src={heroImage}
              alt=""
              fetchpriority="high"
              loading="eager"
            />
          )
        }
        <div class="date-created">
          <FormattedDate date={pubDate} />
          {author && -(<span class="pubDateAuthor">{author}</span>)}
        </div>
        {
          updatedDate && (
            <div class="date-updated">
              Last update <FormattedDate date={updatedDate} />
            </div>
          )
        }

        <h1>{title}</h1>

        <hr />

        <slot />
      </article>
    </main>
    <Footer />
    <style>
      .date-created {
        font-size: medium;
      }
      .date-updated {
        font-size: small;
      }
    </style>
  </body>
</html>
